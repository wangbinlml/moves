<% include partials/header %>
<% include partials/sidebar %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            内容
            <small>管理</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="/admin"><i class="fa fa-dashboard"></i>首页</a></li>
            <li class="active">内容</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">查询条件</h3>
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-3 col-sm-4">
                                <span>内容名称：</span>
                                <input type="text" class=".col-xs-4" id="s_name" placeholder="请输入用户名称"/>
                            </div>
                            <div class="col-md-3 col-sm-4">
                                <a class="btn btn-default btn-sm" href="javascript:void(0)" id="content-search"><i
                                            class="glyphicon glyphicon-search"></i>
                                    查询</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="box" style="margin-bottom:auto">
                    <div class="box-header with-border">
                        <b>工具栏： </b>
                        <caption>
                            <button type="button" class="btn btn-default" id="content_refresh"><i class="fa fa-refresh icon-white"></i> 刷新
                            </button>
                            <button type="button" class="btn btn-success" id="content_add" data-toggle="modal" data-target="#e-dialog-content" data-whatever=""><i class="glyphicon glyphicon-edit icon-white"></i> 新增
                            </button>
                            <button type="button" class="btn btn-info" id="content_edit" data-toggle="modal" id="content-edit"><i class="fa fa-edit icon-white"></i> 编辑
                            </button>
                            <button type="button" class="btn btn-danger" id="content_batch_remove"><i class="fa fa-remove icon-white"></i> 删除
                            </button>
                            <button type="button" class="btn btn-info" id="content_find" onclick="optionContentData(this);"><i class="glyphicon glyphicon-zoom-in icon-white"></i> 详情
                            </button>
                        </caption>
                        <!--<h3 class="box-title">用户列表</h3>-->
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="contents" class="table datatable table-bordered table-hover">
                            <thead>
                            <tr>
                                <th><input value="all" type="checkbox"
                                           onclick="$('.datatable tbody :checkbox').prop('checked', this.checked);"/>
                                </th>
                                <th>标题</th>
                                <th>类型</th>
                                <th>年份</th>
                                <th>地区</th>
                                <th>置顶</th>
                                <th>轮播</th>
                                <th>点击量</th>
                                <th>来源</th>
                                <th>创建时间</th>
                                <th>更新时间</th>
                                <th>操作</th>
                            </tr>
                            </thead>
                            <tbody>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

<div class="modal fade" id="e-dialog-content" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="exampleModalLabel">修改</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" id="e-contents-form">
                    <div class="box-body">
                        <input type="hidden" data-name="e_id" name="e_id" id="e_id"/>
                        <div class="form-group">
                            <label for="username" class="col-sm-2 control-label">标题</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="e_name" name="e_name" placeholder="请输入标题">
                            </div>
                        </div>
                        <div class="form-group" id="form-category">
                            <label for="category" class="col-sm-2 control-label">分类</label>
                            <div class="col-sm-10">
                                <select id="category_id">
                                    <option value="1">电影</option>
                                    <option value="2">电视剧</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group" id="form-tag">
                            <label for="tags" class="col-sm-2 control-label">小分类</label>
                            <div class="col-sm-10">
                                <select id="tag_id">
                                    <option value="1">电影</option>
                                    <option value="2">电视剧</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="year" class="col-sm-2 control-label">年份</label>
                            <div class="col-sm-10">
                                <input type="text" name="year" id="year" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="area" class="col-sm-2 control-label">地区</label>
                            <div class="col-sm-10">
                                <input type="text" name="area" id="area" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="cover" class="col-sm-2 control-label">封面</label>
                            <div class="col-sm-10">
                                <input type="file" name="cover" id="cover" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="source" class="col-sm-2 control-label">来源</label>
                            <div class="col-sm-10">
                                <input type="text" name="source" id="source" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="views" class="col-sm-2 control-label">浏览次数</label>
                            <div class="col-sm-10">
                                <input type="text" name="e_views" id="e_views" placeholder="浏览次数">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="sets" class="col-sm-2 control-label">更新至</label>
                            <div class="col-sm-10">
                                <input type="text" id="e_sets" name="e_sets" placeholder="更新至">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="description" class="col-sm-2 control-label">选项</label>
                            <div class="col-sm-10">
                                <label class="checkbox-inline">
                                    <input type="checkbox"  value="1" name="hot"/>最热
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox"  value="1" name="top">置顶
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox"  value="1" name="flash">flash展示
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="description" class="col-sm-2 control-label">描述</label>
                            <div class="col-sm-10">
                                <input type="text" name="description" id="description" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-primary" id="saveContent">保存</button>
            </div>
        </div>
    </div>
</div>
<% include partials/footer %>
<script src="/backend/service/content_manage.js"></script>
