<% include partials/header %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-md-9 order-md-1">
                <section class="panel">
                    <div class="panel-body table-responsive">
                        <div id="xigua_player">
                            <script language="javascript">
                                var XgPlayer = {
                                    'Url': "ftp://a.gbl.114s.com:20320/7119/红雀.BD.720p.中英双字幕.mkv",  //本集播放地址，需更改
                                    //'NextcacheUrl': "ftp://pub:pub@.domain.com:20320/421/01.mp4",  //缓冲下一集，需更改
                                    'LastWebPage': '',
                                    //'NextWebPage': "http://www.xx.com/xxx.html",  //下一集播放页面地址，需更改
                                    'Buffer': '/move/player_show',  // 播缓冲AD，需更改
                                    'Pase': '/move/player_show',  // 暂停AD，需更改
                                    'Width': '100%',   // 播放器显示宽度
                                    'Height': 490,  // 播放器显示高度
                                    'Second': 8,  // 缓冲时间
                                    "Installpage":'/move/player_show'
                                };
                            </script>
                            <script language="javascript" src="http://js.client51.com/m_xiguaplayer.js" charset="utf-8"></script>
                        </div>
                        <div id="detail">
                            <p><a href="/move/detail?move_id=<%= move['id'] %>"><img title="<%= move['name'] %>" alt="<%= move['name'] %>" src="<%= move['cover'] %>" /></a></p>
                            <p>电影：<%= move['name'] %></p>
                            <p>演员表：
                                <% actors.forEach(function(item, index){ %>
                                <a href="/actor/move_list?actor_id=<%= item['id'] %>" target="_blank"><%= item['actor_name'] %></a>
                                <% }) %>
                            </p>
                            <p>类型：<%= move['tag_id'] %> 年代：<%= move['year'] %> 地区：<%= move['area'] %> </p>
                        </div>
                        <br>
                        <div id="">
                            <p>播放列表：</p>
                            <ul>
                                <% moveUrls.forEach(function(item, index){ %>
                                <li>
                                    <p><%= item['player'] %>地址<%=index+1%></p>
                                    <a href="/move/play?move_id=<%= item['move_id'] %>&id=<%= item['id'] %>&player=<%= item['player'] %>" target="_blank"><%= move['name'] %>
                                        - <%= item['name'] %></a>
                                </li>
                                <% }) %>
                            </ul>
                            <div style="color: red">小提示：视频加载需十秒左右，请耐心等待一会，如果播放器一直没反应，<br>请刷新页面重新加载或者选择播放列表中另一个<b>播放地址</b>！</div>
                            <br>
                        </div>

                        <br>
                        <div id="">
                            <p>迅雷下载(下载链接复制到迅雷影音可边下边看)</p>
                            <p>下载列表：</p>
                            <ul>
                                <% downloads.forEach(function(item, index){ %>
                                <li>
                                    <a href="<%= item['download_address'] %>" target="_blank"><%= item['name'] %></a>
                                    <input type="text" value="<%= item['download_address'] %>" class="form-control" title="鼠标左键单击可全选后手动复制该条迅雷地址进行分享或其它操作" onclick="this.select()" style="width: 100%;">
                                </li>
                                <% }) %>
                            </ul>
                        </div>

                        <br>
                        <div id="content">
                            <%- move['description'] %>
                        </div>
                    </div>
                </section>
            </div>
            <% include partials/area_list %>
        </div>
    </div>
</div>
<% include partials/footer %>